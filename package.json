{
  "name": "renameme",
  "version": "1.0.0",
  "description": "Batch file renaming utility",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/falkorclark/renameme.git"
  },
  "bin": {
    "renameme": "lib/bin/cli.js"
  },
  "module": "./lib/renameme.js",
  "main": "./lib/renameme.js",
  "types": "./lib/renameme.d.ts",
  "exports": {
    ".": "./lib/renameme.js",
    "./lib/*.js": "./lib/*.js",
    "./package.json": "./package.json"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "start": "node --import tsx src/bin/cli.ts",
    "build": "node --import tsx src/bin/build.ts",
    "test": "npx eslint src --quiet && node --import tsx src/bin/test.ts",
    "prepublishOnly": "npm run build"
  },
  "author": "Falkor Clark <falkorclark@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "keywords": [
    "batch",
    "file",
    "rename",
    "batch rename",
    "file rename"
  ],
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@stylistic/eslint-plugin": "^5.2.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.2.0",
    "@types/yargs": "^17.0.33",
    "eslint": "^9.32.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "fs-extra": "^11.3.1",
    "yargs": "^18.0.0"
  }
}
